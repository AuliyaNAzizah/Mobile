<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.kalkulatorku.MoreActivity">
    <Button
        android:id="@+id/btnHitung1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:text=" Persegi dan Persegi Panjang"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />
    <Button
        android:id="@+id/btnHitung2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnHitung1"
        android:layout_marginTop="14dp"
        android:background="@color/colorAccent"
        android:text="Segitiga dan Jajargenjang"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="72dp" />
    <Button
        android:id="@+id/btnHitung3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnHitung2"
        android:layout_marginTop="18dp"
        android:background="@color/colorAccent"
        android:text="belah ketupat dan layang - layang"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="127dp" />
    <Button
        android:id="@+id/btnHitung4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnHitung3"
        android:layout_marginTop="18dp"
        android:background="@color/colorAccent"
        android:text="trapesium dan lingkaran"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="188dp" />
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/colorPrimary"
        android:text="Back" />
</RelativeLayout>