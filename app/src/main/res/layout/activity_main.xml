<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.kalkulatorku.MainActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/masukan1"
        android:onClick="clearInput1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignTop="@+id/operan"
        android:layout_alignBottom="@+id/operan"
        android:layout_toLeftOf="@+id/operan"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="     "
        android:id="@+id/operan"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_below="@+id/hasil"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/masukan2"
        android:layout_alignBottom="@+id/operan"
        android:onClick="clearInput2"
        android:layout_alignTop="@+id/operan"
        android:layout_toRightOf="@+id/operan"
        android:layout_alignRight="@+id/hasil"
        android:layout_alignEnd="@+id/hasil" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Hasil ="
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/hasil"
        android:layout_alignBottom="@+id/hasil"
        android:layout_alignLeft="@+id/tambah"
        android:layout_alignStart="@+id/tambah" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/hasil"
        android:gravity="right"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="28dp" />
    <Button
        android:id="@+id/tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/masukan1"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/kali"
        android:layout_toStartOf="@+id/kali"
        android:onClick="klikTambah"
        android:text=" + "
        android:textStyle="bold" />
    <Button
        android:id="@+id/kurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tambah"
        android:layout_alignLeft="@+id/tambah"
        android:layout_alignRight="@+id/tambah"
        android:layout_alignStart="@+id/tambah"
        android:layout_alignTop="@+id/bagi"
        android:onClick="klikKurang"
        android:text="-"
        android:textStyle="bold" />
    <Button
        android:id="@+id/kali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bagi"
        android:layout_alignStart="@+id/bagi"
        android:layout_alignTop="@+id/tambah"
        android:onClick="klikKali"
        android:text="x"
        android:textStyle="bold" />
    <Button
        android:id="@+id/bagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kali"
        android:layout_centerHorizontal="true"
        android:onClick="klikBagi"
        android:text=":"
        android:textStyle="bold" />
    <Button
        android:id="@+id/hitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bagi"
        android:layout_below="@+id/masukan2"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/kali"
        android:layout_toRightOf="@+id/kali"
        android:onClick="klikHasil"
        android:text="Hitung"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/notifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bagi"
        android:layout_alignLeft="@+id/bagi"
        android:layout_alignRight="@+id/bagi"
        android:layout_alignStart="@+id/bagi"
        android:layout_centerVertical="true"
        android:gravity="center" />
    <Button
        android:id="@+id/btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/kurang"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/kurang"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="more"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>
